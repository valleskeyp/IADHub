package com.valleskeyp.mgdgame;

import screens.SplashScreen;

import com.badlogic.gdx.Game;

public class GameClass extends Game {
	
	private GoogleInterface platformInterface;
	
	public GameClass(GoogleInterface aInterface) {
		platformInterface = aInterface;
		
		platformInterface.Login();
	}
	
	@Override
	public void create() {
		setScreen(new SplashScreen(platformInterface));
	}

	@Override
	public void resize(int width, int height) {
		super.resize(width, height);
	}

	@Override
	public void render() {
		super.render();
	}

	@Override
	public void pause() {
		super.pause();
	}

	@Override
	public void resume() {
		super.resume();
	}

	@Override
	public void dispose() {
		super.dispose();
	}

}
